<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/ic_report"
            android:drawablePadding="6dp"
            android:text="顾问报告"
            android:textColor="@color/tv4e4e4e"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_sanjiao" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_cricle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_cricle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            fresco:roundAsCircle="true"
            fresco:roundWithOverlayColor="@color/ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="语言能力"
                android:textColor="@color/ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="完成0项"
                android:textColor="@color/ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="计划中1项"
                android:textColor="@color/ffffff"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_cricle"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:background="@color/orange" />

    <View
        android:id="@+id/view_vertical"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_below="@id/rl_cricle"
        android:layout_marginLeft="80dp"
        android:background="@color/orange" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/view_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一个任务"
                android:textColor="@color/tv090909"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_next_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="test"
            android:textColor="@color/tv090909"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="6dp"
                android:text="@string/plan_time"
                android:textColor="@color/tv090909"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_tip"
                android:drawablePadding="6dp"
                android:text="@string/plan_day"
                android:textColor="@color/tv090909"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>