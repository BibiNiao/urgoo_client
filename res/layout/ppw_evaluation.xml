<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ppw_bg"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="评价"
        android:textColor="#434343"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/img_ppw_evalu_esc"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:scaleX="-0.5"
        android:scaleY="-0.5"
        android:src="@drawable/x"
        />


    <RadioGroup
        android:id="@+id/Radio_ppw_evalu_RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radbut_ppw_evalu_radio0"
            android:layout_width="185dp"
            android:layout_height="38sp"
            android:background="@drawable/ppw_button_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="很适合，希望进一步了解"
            android:textColor="@drawable/ppw_button_bg_tv"
            android:textSize="13sp"
            />

        <RadioButton
            android:id="@+id/radbut_ppw_evalu_radio1"
            android:layout_width="185dp"
            android:layout_height="38sp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ppw_button_bg"
            android:button="@null"
            android:gravity="center"
            android:text="再看看其他顾问"
            android:textColor="@drawable/ppw_button_bg_tv"
            android:textSize="13sp"
            />

        <RadioButton
            android:id="@+id/radbut_ppw_evalu_radio2"
            android:layout_width="185dp"
            android:layout_height="38sp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ppw_button_bg"
            android:button="@null"
            android:gravity="center"
            android:text="不适合"
            android:textColor="@drawable/ppw_button_bg_tv"
            android:textSize="13sp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Radio_ppw_evalu_RadioGroup"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="17dp"
        android:text="留言："
        android:textColor="#4c4c4c"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/et_ppw_evalu_Edtext"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/TextView"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/mine_order_content_edittext_bg"
        android:focusable="true"
        android:gravity="left|top"
        android:state_focused="true"
        android:padding="5dp"
        android:textSize="13sp"
        android:textColor="#383838"
        />

    <requestFocus/>

    <Button
        android:id="@+id/but_ppw_evalu_submit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_ppw_evalu_Edtext"
        android:layout_marginTop="24dp"
        android:background="@drawable/ppw_button_bottom"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="14sp"/>


</RelativeLayout>