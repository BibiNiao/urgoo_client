<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_schedule_header" />

    <TextView
        android:id="@+id/count_time"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_below="@+id/flag1"
        android:background="#f7f7f7"
        android:gravity="center"
        android:text="约见倒计时：00:00:00"
        android:textColor="#383838"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_below="@id/count_time"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_flag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="状态:"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/status_flag1"
            android:text="已确认"
            android:textColor="#fecb03"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_flag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_flag1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="预约日期:"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/yyuyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/status_flag2"
            android:text="05月09日"
            android:textColor="#fecb03"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_flag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_flag2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="预约日期:"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/yyuyueshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yyuyue"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/status_flag3"
            android:text="05月09日"
            android:textColor="#fecb03"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yyuyueshijian"
            android:layout_toRightOf="@+id/status_flag3"
            android:text="(美国时间(5:00-10:00))"
            android:textColor="@color/text_common_color" />


        <TextView
            android:id="@+id/flag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_flag3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:text="留言:"
            android:textColor="#383838"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_below="@+id/flag4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/checked_btn1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/gray_normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cancle_yuyue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="取消预约"
                android:textColor="#5c5c5c"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/now_yuyue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/now_yuyue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="立即预约"
                android:textColor="#ff9148"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/now_pingjia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/damuzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="评价"
                android:textColor="#ff9148"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/now_pingyong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_botton_bar_blue"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingTop="4dp"
                android:text="立即聘用"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/now_lianxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_botton_bar_blue"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingTop="4dp"
                android:text="立即联系"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>