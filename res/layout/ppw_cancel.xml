<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ppw_bg"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="怎么要取消了呢？"
        android:textColor="#434343"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/img_ppw_cancel_esc"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:scaleX="-0.5"
        android:scaleY="-0.5"
        android:src="@drawable/x"
        />


    <RadioGroup
        android:id="@+id/Radio_ppw_cancel_RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radbut_ppw_cancel_radio0"
            android:layout_width="185dp"
            android:layout_height="38sp"
            android:background="@drawable/ppw_button_bg"
            android:textColor="@drawable/ppw_button_bg_tv"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="时间冲突"
            android:textSize="13sp"
            />

        <RadioButton
            android:id="@+id/radbut_ppw_cancel_radio1"
            android:layout_width="185dp"
            android:layout_height="38sp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ppw_button_bg"
            android:button="@null"
            android:gravity="center"
            android:text="已沟通"
            android:textColor="@drawable/ppw_button_bg_tv"
            android:textSize="13sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/but_ppw_cancel_submit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Radio_ppw_cancel_RadioGroup"
        android:layout_marginTop="34dp"
        android:background="@drawable/ppw_button_bottom"
        android:textColor="@color/white"
        android:text="确认"
        android:textSize="14sp"/>


</RelativeLayout>