<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flag1"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/white"
    tools:showIn="@layout/schedule_detail">

    <com.urgoo.view.CircleImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/em_default_face" />

    <ImageView
        android:id="@+id/flag_address"
        android:layout_width="9dp"
        android:layout_height="12dp"
        android:layout_below="@+id/img"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/address" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/flag_address"
        android:text="U.S.A"
        android:textColor="#26bdab" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/img">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Karen Mitchell"
            android:textColor="@color/text_common_color_252525"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="8dp"
            android:text="工作经验:1-3"
            android:textColor="@color/text_common_color_252525"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/skilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/experience"
            android:layout_marginTop="3dp"
            android:text="擅长领域:美国高中，美国本科"
            android:textColor="@color/text_common_color_252525"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/meet_up_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skilled"
            android:layout_marginTop="3dp"
            android:text="历史约见次数:2"
            android:textColor="@color/text_common_color_252525"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recent_meet_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meet_up_times"
            android:layout_marginTop="5dp"
            android:text="最近约见:04-19 8:00-9:00"
            android:textColor="@color/text_common_color_252525"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/checked_btn"
            android:gravity="center"
            android:padding="3dp"
            android:text="OACAC会员"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</RelativeLayout>