<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_search_bar7"
        android:scaleType="fitXY"
        android:src="@drawable/xian" />

    <TextView
        android:id="@+id/tv_content_companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_search_bar"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Townsenf Hrris High School,Flushing,New YorkTownsenf Hrris High School,Flushing,New York  "
        android:textColor="#434343"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content_position"
            android:layout_width="@dimen/padding0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="教导主任教导主任教导主任教导主任教导主任教导主任教导主任教导主任教导主任教导主任"
            android:textColor="#434343"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_content_timedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2015.09-now"
            android:textColor="#434343"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>