<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_buju"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <com.urgoo.view.MyScrollView
        android:id="@+id/sw_pl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:paddingBottom="36dp"
                android:paddingLeft="35dp"
                android:paddingRight="25dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/tv_task_titele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="                 "
                    android:textColor="#232323"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_task_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_task_titele"
                    android:text="                 "
                    android:textColor="#434343"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c6c6c6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="17dp"
                android:paddingLeft="34dp"
                android:paddingTop="8dp"
                android:text="动态"
                android:textColor="#383838"
                android:textSize="16sp" />

            <com.urgoo.view.MyListView
                android:id="@+id/tasak_cont_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@null"
                android:listSelector="@android:color/transparent" />

        </LinearLayout>

    </com.urgoo.view.MyScrollView>

</LinearLayout>
