<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:id="@+id/rrls"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="07:00-08:00"
        android:textColor="#383838"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/schedule_timeusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(美国时间 19:00-20:00)"
        android:textColor="#383838"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_alignTop="@+id/schedule_time"
        android:layout_toRightOf="@+id/schedule_time"
        android:layout_toEndOf="@+id/schedule_time"/>

    <ImageView
        android:id="@+id/schedule_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/yy"

        />
    <ImageView
        android:id="@+id/schedule_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/oo"
        />
    <ImageView
        android:id="@+id/schedule_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/xx"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dashedline"
        android:layerType="software"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>