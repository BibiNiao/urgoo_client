<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_wo_replyTime"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-1-1"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reply_wocontent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="14dp" >

        
         <ImageView
            android:id="@+id/wo_iv_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/default_useravatar" />

        <TextView
            android:id="@+id/txt_woContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/wo_iv_avatar"
            android:background="@drawable/chatto_bg_normal"
            android:text="12345678"
            android:gravity="left"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingRight="20dp"
            android:textColor="#353535"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>