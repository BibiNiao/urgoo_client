<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="11dp">


        <com.urgoo.view.CircleImageView
            android:id="@+id/img_myorder_tobo_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/exit"/>

        <TextView
            android:id="@+id/tv_myorder_tobo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/img_myorder_tobo_icon"
            android:text="                         "
            android:textColor="#252525"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_myorder_tobo_user"
            android:layout_below="@+id/tv_myorder_tobo_user"
            android:layout_marginTop="7dp"
            android:text="预约时间："
            android:textColor="#252525"
            android:textSize="13sp"
            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_myorder_tobo_user"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/textView2">

            <TextView
                android:id="@+id/tv_myorder_tobe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                         "
                android:textColor="#383838"
                />

            <TextView
                android:id="@+id/tv_myorder_tobe_time_USA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_myorder_tobe_time"
                android:layout_below="@+id/tv_myorder_tobe_time"
                android:text="                         "
                android:textColor="#c4c4c4"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/item_icon"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
</LinearLayout>