<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_background"
    android:orientation="vertical">


    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/main_search_margin"
            android:layout_marginRight="@dimen/main_search_margin"
            android:background="@drawable/btn_search"
            android:backgroundDimAmount="0.3"
            android:drawableLeft="@drawable/ic_search_touming"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:text="请输入顾问的姓名"
            android:textColor="@color/ffffff"
            android:textSize="12dp" />
    </RelativeLayout>
</FrameLayout>