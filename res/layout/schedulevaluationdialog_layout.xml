<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:background="@drawable/bg_white_aaaaaa"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="Comment"
                android:textColor="#434343"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/cancelicon" />

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/ll_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_aaaaaa"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_ReasonFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:background="@drawable/linearlayoutframe_selected">
                <TextView
                    android:id="@+id/tv_ReasonFirst"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="很适合，希望进一步了解"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ReasonSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/linearlayoutframe_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_ReasonSecond"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="再看看其他顾问"
                    android:textColor="#26bdab"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ReasonThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/linearlayoutframe_normal"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_ReasonThird"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="不适合"
                    android:textColor="#26bdab"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_contentcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_aaaaaa"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_fuwunrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_time"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp" >
                <TextView
                    android:id="@+id/tv_fuwu_nrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言："
                    android:textColor="#4c4c4c"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/linearlayoutsetframe"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/tv_fuwu_nrong">
                    <EditText
                        android:id="@+id/edit_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:paddingLeft="12dp"
                        android:textCursorDrawable="@null"
                        android:textColor="#434343"
                        android:textSize="14sp"
                        android:textColorHint="#e5e5e5" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >



            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_white_aaaaaa"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textColor="#353535"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#d7d7d7" />

            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_white_aaaaaa"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textColor="#353535"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Submit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#26bdab"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_content5"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="确认"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>