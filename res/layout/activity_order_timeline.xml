    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circle_green"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/iv"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_light_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/iv"
                        android:text="客户支付平台费用"
                        android:textSize="14dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circle_green"/>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/iv1"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_light_background"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/iv1"
                        android:text="后，顾问收到总款的"
                        android:textSize="14dp"/>
                </RelativeLayout>

                <com.urgoo.view.TimeLineListView
                    android:id="@+id/lv_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout2"
                    android:layout_marginLeft="0.5dp"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"/>

                <View
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/lv_timeline"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_light_background"/>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circle_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/iv2"
                        android:text="客户确认合同内服务完成，顾问收取剩余费用"
                        android:textSize="14dp"/>
                </LinearLayout>

            </RelativeLayout>

