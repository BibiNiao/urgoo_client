<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#26BDAB">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="优宝"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/activity_selectimg_send"
            android:layout_width="60dip"
            android:layout_height="match_parent"

            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="#2d2d2d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#9e9e9e" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/customerervicescp"
                android:clickable="true">

                <RelativeLayout
                    android:id="@+id/re_lianxkef"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/re_customerservicetitle"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:text="优宝"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/iv_xiangce2233"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/urgooicon_right" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/re_customerservicetitle"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fxid2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="72dp"
                            android:text="你好"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_fxid223"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="72dp"
                            android:text="你好，欢迎来到urgoo平台，我是你的专职小秘书,有什么问题都可以来问我哦~~~"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_fxid2235"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="left"
                            android:layout_marginLeft="72dp"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_fxid2233"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="72dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/re_fuwuleix2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/datercp"
                android:clickable="true"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/re_scheduletitile"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="12dp"
                        android:text="任务情况"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_xiangce22334"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/urgooicon_right" />



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_personalcertificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_scheduletitile"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_taskfirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">"

                        <TextView
                            android:id="@+id/iv_xiangce2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="60dp"
                            android:layout_toRightOf="@+id/txt_personalcertificate"
                            android:textColor="#fff"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_taskfirst"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_personalcertificate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_personalcertificate"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_secondtask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/iv_xiangce22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:layout_toRightOf="@+id/txt_personalcertificate2"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_secondtask"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_personalcertificate23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_personalcertificate2"
                    android:clickable="true"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_thirdtask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/iv_xiangce223"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:layout_toRightOf="@+id/txt_personalcertificate23"
                            android:textColor="#fff"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_thirdtask"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/re_orderp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ordercp"
                android:clickable="true"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/re_order"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="12dp"
                        android:text="留学规划"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_xiangce223343"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/urgooicon_right" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_orderone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/re_order"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_firstaccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_personalcertificate6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="72dp"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_firstaccount"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_ordertwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_orderone"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_secondaccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_re_texttwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="72dp"

                            android:textColor="#fff"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_secondaccount"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_orderthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_ordertwo"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:id="@+id/ll_thirdaccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_re_textthree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="72dp"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="288dp"
                        android:layout_height="2dp"
                        android:layout_below="@id/ll_thirdaccount"
                        android:layout_marginLeft="60dp"
                        android:layerType="software"
                        android:background="@drawable/dotted_line" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>